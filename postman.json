    {
      "name": "Quiz Management (Admin)",
      "item": [
        {
          "name": "Create Quiz",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"JavaScript Fundamentals Quiz\",\n  \"questions\": [\n    {\n      \"questionText\": \"What is the correct way to declare a variable in JavaScript?\",\n      \"type\": \"MCQ\",\n      \"options\": [\"var x = 5;\", \"variable x = 5;\", \"v x = 5;\", \"declare x = 5;\"],\n      \"correctAnswer\": \"var x = 5;\"\n    },\n    {\n      \"questionText\": \"JavaScript is a case-sensitive language.\",\n      \"type\": \"TrueFalse\",\n      \"options\": [\"True\", \"False\"],\n      \"correctAnswer\": \"True\"\n    },\n    {\n      \"questionText\": \"What does DOM stand for?\",\n      \"type\": \"Text\",\n      \"options\": [],\n      \"correctAnswer\": \"Document Object Model\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/quiz",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "quiz"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('quizId', response.quiz._id);",
                  "    console.log('Quiz ID saved:', response.quiz._id);",
                  "}"
                ]
              }
            }
          ]
        },
